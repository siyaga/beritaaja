<%- include('templates/header')-%>
    <div class="row justify-content-center mb-5">
        
        <div class="col-md-8 " >
            <div class="card p-4">

            <h2 class="mb-3"><%= beritas.judul %> </h2>
            <p class="font-weight-bold text-center"><%= beritas.author %> - Berita </a></p>
            <small class="font-weight-light text-center"><%= moment(beritas.createdAt).format('dddd, yyyy-MM-DD, HH:mm') %></small>
            </br>
            <div style="max-height:350px; overflow:hidden;">
                <img class="img-fluid " src="../images/<%= beritas.image %>" alt="<%=beritas.judul %>" >
 
            </div>
            
            <article class="my-3 fs-5" >
            <%= beritas.artikel %> 
            </article>

            
            <a href="/" class="btn btn-warning">Lihat Berita Lain</a>
           </div>
            <div class="card mt-3 ">
                
                    <div class="card-body">
                        <h4 class="card-title">Recent Comments</h4>
                        <h6 class="card-subtitle">Latest Comments section by users</h6>
                    </div>
                    <%// for(const comment of comments){%>
                    <% komentars.forEach(function(komen){ %>     
                    <div class="comment-widgets m-b-20 ">
                        <div class="d-flex flex-row comment-row">
                            <div class="p-2"><span class="round"><img src="../images/default.png" alt="user" width="50"></span>
                            </div>
                            <div class="comment-text w-100">
                                <h5><%= komen.username %></h5>
                                <div class="comment-footer">
                                    <span class="date"><%= moment(komen.createdAt).format('yyyy-MM-DD, HH:mm') %></span>
                                   
                                  
                                </div>
                                
                                <p class="m-b-5 m-t-10 mt-1"><%= komen.komentar %></p>
                            </div>
                        </div>
                   
                    
                    

                </div>
                <% }); %> 
                    
            </div>

        <div class="card mt-3 p-4">
            <form method="POST" action="/komentar">
                <div class="mb-3 ">
                     <input type="hidden" name="idberita" value="<%= beritas.id %>">
                 
                <% if(username){ %>
                    
                        <label for="username" class="form-label">Username</label>
                        <input
                          type="hidden"
                          name="username"
                          class="form-control"
                          id="username"
                          value="<%= username %>"
                          placeholder="Username"
                        />
                        <h5><%= username %></h5>
                <% }else { %>
                    
                        <label for="username" class="form-label">Username</label>
                        <input
                          type="text"
                          name="username"
                          class="form-control"
                          id="username"
                          placeholder="Username"
                        />
                      
                <% } %>       
                </div>
                <div class="mb-3">
                  <label for="komentar" class="form-label">Komentar anda : </label>
                  <textarea
                  type="komentar"
                  name="komentar"
                  class="form-control"
                  id="komentar"
                  ></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
                
              </form>
        </div>
        </div>
    </div>
<%- include('templates/footer')-%>