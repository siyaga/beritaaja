<%- include('templates/header')-%>
<h1 class="mb-3 text-center"><%= title %> </h1>
<a href="/dashboard/addberita" class="btn btn-outline-primary mb-3">Tambah Berita Baru</a>
    <table class="table">
        <thead>
          <tr class="table-dark">
            <th scope="col">No</th>
            <th scope="col">judul Berita</th>
            <th scope="col">Penulis</th>
            <th scope="col">Image</th>
            <th scope="col">Artikel</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if (beritas.length < 1 ) { %>
            <div class="p-3 mb-2 bg-warning text-dark">Berita Data Tidak ada</div>
            <% } else {%>
          <% let i = 1;  %> 
          <% beritas.forEach(function(item){ %> 
          <tr>
           
            <th  scope="row"><%= i++ %> </th>
            <td><p style="
              display:inline-block;
              white-space: nowrap;
              overflow: hidden;
              text-overflow: ellipsis;
              max-width: 30ch;"><%=item.judul %></p></td>
            <td><%= item.author %> </td>
            <td><img src="../images/<%= item.image %>" width="70"> </td>
            <td ><p style="
              display:inline-block;
              white-space: nowrap;
              overflow: hidden;
              text-overflow: ellipsis;
              max-width: 30ch;"><%=item.artikel %></p> </td>
            <td>
              <a href="/berita/<%= item.id %>" class="btn btn-outline-primary">Detail</a>
              &nbsp;<a href="/dashboard/editberita/<%= item.id%>" class="btn btn-outline-warning">Edit</a>
              &nbsp;<a href="/dashboard/deleteberita/<%= item.id%>" class="btn btn-outline-danger" onclick="return confirm('yakin Anda Menghapus <%= item.judul %>?')">delete</a>
            </td>
          </tr>
         <% }); %>
         <% } %>  
        </tbody>
      </table>
<%- include('templates/footer')-%>